{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "max-line-length": false,
    "no-constant-condition": true,
    "indent": [true, "spaces", 4],
    "brace-style": [true, "allman", {"allowSingleLine": true}],
    "one-line": [false]
  },
  "rulesDirectory": ["node_modules/tslint-eslint-rules/dist/rules"]
}
